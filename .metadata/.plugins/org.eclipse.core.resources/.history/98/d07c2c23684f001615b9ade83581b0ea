	  xmlns:f="http://xmlns.jcp.org/jsf/core"
	  xmlns:p="http://primefaces.org/ui"
	  xmlns:ui="http://xmlns.jcp.org/jsf/facelets">
	 
<ui:composition template="_template.xhtml">

 <ui:define name="title">
		<h2 align="center">Integrando JSF 2.2 com JPA/ Hibernate</h2>
	</ui:define>

 <ui:define name="content">

	<h:form id="competence">
		<fieldset>
			<legend>Registro de Comtetências</legend>
			<h:panelGrid columns="3">

				<p:outputLabel  value="#{labels.lbtechnology}" for="tecnologia" />
				<p:inputText id="tecnologia" value="#{competenceBean.competence.tecnologia}" 
				             required="true"
				             requiredMessage="Tecnologia Obrigatória"
				             validatorMessage="Tecnologia com 5 caracteres ou abaixo de 20.">
						     <f:validateLength maximum="20" minimum="5"/>
				</p:inputText>	
				<p:message for="tecnologia" id="messageTecnologia"/>
				     
				<p:outputLabel  value="#{labels.lbdate}" for="dataLancamento" />
				<p:inputText id="dataLancamento"
					value="#{competenceBean.competence.dataLancamento.time}">
					<f:convertDateTime pattern="dd/MM/yyyy" timeZone="America/Sao_Paulo" />
				</p:inputText>                     
				<p:commandButton value="#{labels.btnsave}" action="#{competenceBean.salvar}" />
			</h:panelGrid>
		</fieldset>
	</h:form>
	
	<h:form id="formTabelaSkills">
			<p:dataList id="tabelaSkills" value="#{competenceBean.skills}" var="competence" type="definition">
			
				<f:facet name="header">Autores</f:facet>
				<p:commandButton icon="fa fa-fw fa-edit" update=":autor">
					<f:setPropertyActionListener value="#{autor}" target="#{autorBean.autor}" />
				</p:commandButton>
				<p:commandButton icon="fa fa-fw fa-remove" action="#{autorBean.remover(autor)}" update="@form" />
                #{autor.nome} - #{autor.email}
                
            </p:dataList>
		</h:form>
	
	<h:form id="formTabelaSkills">
			<h:dataTable id="tabelaSkills" value="#{competenceBean.skills}" var="competence">
				<h:column>
					<f:facet name="header">Id</f:facet>
					<h:outputText value="#{competence.id}" />
				</h:column>
				<h:column>
					<f:facet name="header">
					      <h:outputLabel  name="header" value="#{labels.lbtechnology}" />
					</f:facet>
					<h:outputText value="#{competence.tecnologia}" />
				</h:column>
				<h:column>
					<f:facet name="header">
					    <h:outputLabel  name="header" value="#{labels.lbdate}" />
					</f:facet>
					<h:outputText value="#{competenceBean.competence.dataLancamento.time}">
						<f:convertDateTime pattern="dd/MM/yyyy" timeZone="America/Sao_Paulo" />
					</h:outputText>
				</h:column>
				
				<h:column>
					<f:facet name="header">
					   <h:outputLabel  name="header" value="#{labels.lbupdate}" />
					</f:facet>
					<h:commandLink value="alterar"
						action="#{competenceBean.loadCompetence(competence)}" />
				</h:column>
				<h:column>
					<f:facet name="header">
					    <h:outputLabel  name="header" value="#{labels.lbremove}" />
					</f:facet>
					<h:commandButton value="remover" action="#{competenceBean.deletar(competence, competence.id)}" immediate="true">
					     <f:ajax execute="competence" render="formTabelaSkills :tabelaSkills" />
					</h:commandButton>
				  
				</h:column>
			</h:dataTable>
		</h:form>
   </ui:define>
